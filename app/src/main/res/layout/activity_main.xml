<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/paywall_bg"
        android:fitsSystemWindows="true">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@id/drawer_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@id/coordinator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@id/appBarLayout"
                    android:background="@color/black_blur_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0.0dip">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@id/toolbar"
                        android:layout_width="fill_parent"
                        android:layout_height="?actionBarSize"
                        android:theme="@style/MyOverflowButtonStyle"
                        app:contentInsetStartWithNavigation="0.0dip"
                        app:popupTheme="@style/AppTheme.PopupOverlay"
                        app:navigationIcon="@drawable/baseline_menu_white_36dp"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="56dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="56dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/bg_sign_home"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/black_trong"
                                />
                            <ImageView
                                android:id="@+id/logo_sign"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingBottom="3dp"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/s11_or"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="74dp"
                                android:src="@drawable/baseline_arrow_drop_down_white_24dp"
                                app:layout_constraintBottom_toBottomOf="@+id/logo_sign"
                                app:layout_constraintEnd_toEndOf="@+id/logo_sign"
                                app:layout_constraintStart_toStartOf="@+id/logo_sign"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.appcompat.widget.Toolbar>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@id/sliding_tabs"
                        app:tabIndicatorColor="#899C27B0"
                        app:tabIndicatorGravity="center"
                        app:layout_scrollFlags="scroll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_tab_selected"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bar"
                        app:tabIndicatorHeight="@dimen/_25sdp"
                        app:tabSelectedTextColor="@color/white"
                        app:tabIndicator="@drawable/bg_button"
                        app:tabInlineLabel="true"
                        app:tabTextColor="#bdbdbd"

                        />
                </com.google.android.material.appbar.AppBarLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@id/viewpager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="start"
                android:background="@drawable/background_v2"
                android:fitsSystemWindows="false"
                android:theme="@style/NavigationView"
                app:itemTextColor="@color/white"
                app:itemIconTint="@color/white"
                app:menu="@menu/menu_horoscope">

            </com.google.android.material.navigation.NavigationView>
        </androidx.drawerlayout.widget.DrawerLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_blur_4"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/astro_profile_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/size_back"
                    android:layout_height="@dimen/size_back"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/back_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toTopOf="@+id/version_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/orange"
                android:textSize="@dimen/size_text_title"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/version_name"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />


            <TextView
                android:id="@+id/version_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1.0.4 okjpngfo"
                android:textColor="@color/orange"
                android:textSize="@dimen/size_text_title"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="walkinsvicky@gmail.com"
                android:textColor="@color/orange"
                android:textSize="@dimen/size_text_no"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>